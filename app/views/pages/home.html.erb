<div class="front-page-wrapper">
  <%= render "shared/logout_links" %>
  <%= render "shared/mobile_menu" %>
  <section class="front-page">
    <aside class="container-aside">
      <header>
        <div class="site-name">Aster</div>
        <nav>
          <ul class="menu">
            <%= render "shared/nav_menu" %>
          </ul>
        </nav>
      </header>
      <footer class="footer-aside">
        <ul>
          <li class="mb-12">
            <div>81. Tarn. France. </div>
            <div>
              <a
                href="https://goo.gl/maps/qivmSfBRyTC9MbUY8"
                target="_blank"
                rel="noopener noreferrer"
                ><%= t('see_map') %></a
              >
            </div>
          </li>
          <li><%= t('footer_phone') %>: xxx-xxx-xxx</li>
          <li><%= t('footer_hours') %>: <%= t('footer_monday') %>-<%= t('footer_saturday') %>, 17:00-23:00</li>
        </ul>
      </footer>
    </aside>
    <h1 class="mobile-site-name site-name">Aster</h1>
    <div class="front-page-img-wrapper">
      <%= image_tag("cover-img.jpg", :class => "front-page-img") %>
      <div class="socials-wrapper">
        <%= render "shared/socials" %>
      </div>
    </div>
  </section>
  <%= render "shared/footer" %>
</div>
