<%= render "shared/header" %>

<section class="articles">
  <h1 class="articles-title">Recent News</h1>

  <ul class="article">
    <% @articles.each do | article | %>
    <li class="article-title"><%= link_to article.title, article %></li>
    <li class="article-author">
      By <%= article.author %> - <%= article.created_at.strftime("%d %b. %Y") %>
    </li>
    <li class="article-body">
      <%= truncate(article.body, length: 300) {link_to "...Read More", article}
      %>
    </li>
    <% end %>
  </ul>
  <%= link_to "New Article", new_article_path %>
</section>
<div class="footer-bottom-wrapper">
  <h3 class="footer-bottom-title">CAFE DU JOSH</h3>
  <%= render "shared/footer" %>
</div>

<%= javascript_pack_tag 'hamburger' %>
