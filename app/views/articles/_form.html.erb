  <%= form_with model: article do |form| %>
  <div>
    <%= form.label :title %><br />
    <%= form.text_field :title, class: "form-input" %><br />
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :body %><br />
    <%= form.text_area :body, class: "form-input body-field" %><br />
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit "Submit", class: "btn mt-16" %>
  </div>
<% end %>
