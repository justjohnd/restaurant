<%= render "shared/header" %>
<div class="container">
  <h2 class="form-title">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email %>
      <br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>
    <div class="field">
      <%= f.label :nameLast, "Last Name" %>
      <%= f.text_field :nameLast, autocomplete: "Last Name", class: "form-input" %>
    </div>
    <div class="field">
      <%= f.label :nameFirst, "First Name" %>
      <%= f.text_field :nameFirst, autocomplete: "First Name", class: "form-input" %>
    </div>
    <div class="field">
      <%= f.label :userName, "Username" %>
      <%= f.text_field :userName, autocomplete: "Username", class: "form-input" %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
    </div>
    <div class="actions"><%= f.submit "Sign up", class: "btn mb-20" %></div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
