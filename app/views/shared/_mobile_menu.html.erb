<section class="mobile-wrapper">
  <div class="nav-mobile">
    <div class="hamburger">
      <%= fa_icon 'times', :class => 'hamburger-close' %>
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>
  </div>
  <ul class="mobile-menu d-none">
    <%= render "shared/nav_menu" %>
    <div class="mobile-socials-wrapper">
      <a href="https://facebook.com" target="_blank" rel="noopener noreferrer">
        <%= fa_icon 'facebook', :class => 'mobile-social' %>
      </a>
      <%= fa_icon 'instagram', :class => 'mobile-social' %>
      <%= fa_icon 'twitter', :class => 'mobile-social' %>
    </div>
    <li class="menu-item">
      <% if user_signed_in? %>
        <p>
          <%= link_to "Account", edit_user_registration_path, class: "account-link" %>
        </p>
        <p>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "account-link" %>
        </p>
      <% end %>
    </li>
  </ul>
</section>
